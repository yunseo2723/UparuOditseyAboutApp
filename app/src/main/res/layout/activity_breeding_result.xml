<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background00"
    tools:context=".activity.BreedingResultActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/johpaList"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp" />

    <ImageView
        android:id="@+id/setView2"
        android:layout_width="360dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settingview2" />

    <ImageButton
        android:id="@+id/randomButton1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/setView2"
        android:layout_alignTop="@+id/setView2"
        android:layout_marginStart="34dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/uparubackground"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/randomegg" />

    <ImageButton
        android:id="@+id/randomButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/setView2"
        android:layout_alignEnd="@+id/setView2"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/uparubackground"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/randomegg" />

    <ImageButton
        android:id="@+id/johapButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/johapstartbutton" />

    <ImageButton
        android:id="@+id/questionButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/questionbutton" />
</RelativeLayout>
