<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundjohap"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/uparu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/uparubackground"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/godaesinyong" />

    <TextView
        android:id="@+id/name"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="고대신룡"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/uparu"
        app:layout_constraintTop_toBottomOf="@+id/uparu" />

    <ImageView
        android:id="@+id/egg1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uparu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eggg" />

    <TextView
        android:id="@+id/sohwan"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="소환시간 :"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/egg1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:text="7초"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sohwan"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sohwan"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>